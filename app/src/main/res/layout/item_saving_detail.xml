<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:padding="16dp">


    <ImageView
        android:id="@+id/saving_icon"
        android:layout_width="111dp"
        android:layout_height="107dp"
        android:background="@drawable/ic_holder2"
        android:contentDescription="Saving Icon"
        android:padding="16dp"
        android:src="@drawable/ic_travel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginTop="-10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/saving_name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Saving Name"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/progress_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="50% completed"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/amount_goal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="Goal: $1000"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/amount_saved_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="Saved: $500"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>
